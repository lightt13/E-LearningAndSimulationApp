<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Module2">

    <TextView
        android:id="@+id/m1Modules"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="4dp"
        android:text="MODULES"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/m2Modules"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="sans-serif-black"
        android:text="PROFILE"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/m1Modules" />

    <TextView
        android:id="@+id/m3Modules"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="sans-serif-black"
        android:text="EXAMS"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/m2Modules" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/m1Modules"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/m1Btn15"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_weight="1"
            app:srcCompat="@android:drawable/button_onoff_indicator_off" />

        <ImageButton
            android:id="@+id/m1Btn16"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_weight="1"
            app:srcCompat="@android:drawable/button_onoff_indicator_off" />

        <ImageButton
            android:id="@+id/m1Btn17"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_weight="1"
            app:srcCompat="@android:drawable/button_onoff_indicator_off" />
    </LinearLayout>

    <EditText
        android:id="@+id/moduleOneHeader2"
        android:layout_width="match_parent"
        android:layout_height="98dp"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:inputType="text"
        android:text="                               AIR LEARN: Module 2"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="82dp"
        android:layout_height="60dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logoair" />

    <ScrollView
        android:layout_width="409dp"
        android:layout_height="545dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="112dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/TextView300"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ENGINE CYCLE AND OPERATION"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/TextView301"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A CYCLE is a complete sequence of events returning to its original state. An ENGINE CYCLE is a series of events that an internal combustion engine performs while it is operating and delivering power."
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/TextView302"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Most aircraft piston engines operate on the four-stroke five-event cycle principle developed by AUGUST OTTO in Germany. There are four strokes of the piston, two up and two down for each operating cycle. The five events consist of the four strokes plus the ignition event."
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/TextView303"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The basic power-developing parts of a typical reciprocating engine are the cylinder, piston, connecting rod, valves, and crankshaft."
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/TextView304"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="STROKE – The distance the piston moves inside the cylinder from the top to the bottom. One stroke is accomplished with 180 degrees of crankshaft rotation."
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/TextView305"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BORE – The diameter of the inside of the cylinder of a reciprocating engine."
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/TextView306"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BOTTOM DEAD CENTER (BDC) – The position of the piston inside the cylinder when it is at the bottom of its stroke."
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/TextView307"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TOP DEAD CENTER (TDC) – The position of the piston in the cylinder when it is at the top of its stroke."
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/TextView308"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FOUR STROKE CYCLE – Also known as the OTTO cycle, it has separate strokes for intake, compression, power, and exhaust. Completing the cycle requires TWO REVOLUTIONS of the crankshaft."
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/TextView309"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. INTAKE – The intake stroke begins with the piston at TDC and the intake valve open, drawing in the fuel/air mixture."
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/TextView310"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2. COMPRESSION – After the piston reaches BDC, it moves towards the cylinder head, compressing the fuel/air mixture."
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/TextView311"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3. POWER STROKE – The rapidly expanding gases push the piston downward, with exhaust gases escaping before BDC."
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/TextView312"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4. EXHAUST STROKE – Shortly before reaching BDC, hot gases escape from the cylinder as the intake valve opens."
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/TextView313"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OPENING AND CLOSING OF VALVES IN FOUR STROKE FIVE EVENT CYCLE:"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/TextView314"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. INTAKE STROKE – Exhaust valve closes."
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/TextView315"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2. COMPRESSION STROKE – Intake valve closes."
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/TextView316"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3. IGNITION EVENT – Occurs in compression stroke."
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/TextView317"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4. POWER STROKE – Exhaust valve opens."
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/TextView318"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5. EXHAUST STROKE – Intake valve opens."
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/TextView319"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FIRING ORDER – The sequence that ignition events occur in the cylinders to provide balance and reduce vibration."
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/TextView320"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• LYCOMING 4 CYLINDER OPPOSED TYPE ENGINE FIRING ORDER – 1-3-2-4"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/TextView321"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• CONTINENTAL 4 CYLINDER OPPOSED TYPE ENGINE FIRING ORDER – 1-3-2-4"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/TextView322"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• LOM 4 CYLINDER IN-LINE ENGINE FIRING ORDER – 1-3-4-2"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/TextView323"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• WALTER 4 CYLINDER IN-LINE ENGINE FIRING ORDER – 1-3-4-2"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/TextView324"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• CONTINENTAL 6 CYLINDER FIRING ORDER – 1-6-3-2-5-4"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/TextView325"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• LYCOMING 6 CYLINDER FIRING ORDER – 1-4-5-2-3-6"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/TextView326"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TWO STROKE ENGINE – The two-stroke cycle contains the same five events as the four-stroke cycle, completed in a single crankshaft rotation."
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/TextView327"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DISADVANTAGES OF A TWO STROKE ENGINE:"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/TextView328"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. Loss of efficiency due to fuel/air mixture mixing with exhaust gases."
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/TextView329"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2. Difficult to cool because the cylinder fires at every revolution of the crankshaft."
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/TextView330"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3. Difficult to lubricate properly because the lubricant is introduced with the fuel/air mixture."
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/TextView331"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DIESEL ENGINE – Developed by Rudolph Diesel in 1893. Diesel engines were initially used in airships and some airplanes in the early 1930s."
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/TextView332"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The operating principle of the four-stroke diesel engine resembles that of the gasoline engine except the diesel engine requires no electrical ignition."
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/TextView333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. INTAKE – Air from the intake manifold is drawn inside the cylinder."
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/TextView334"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2. COMPRESSION – The piston compresses the air to an extent that the temperature is high enough to ignite the fuel without the use of an electric spark."
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/TextView335"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3. POWER – The piston is forced down and rotates the crankshaft."
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/TextView336"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4. EXHAUST – The exhaust gases escape the cylinder in the same manner as they do in a gasoline engine."
                android:layout_marginBottom="4dp" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>